<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/mainTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vassilis Pigadas"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainImg2" />

    <EditText
        android:id="@+id/editTxt"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="32dp"
        android:hint="@string/dummy_label"
        android:inputType="text" />

    <Button
        android:id="@+id/mainBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vassilis Pigadas"
        android:backgroundTint="@color/colorAccent"
        android:foregroundTint="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/mainImg1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="center"
        android:src="@drawable/ic_business_center_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainImg2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_router_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mainImg1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainImg3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_school_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/mainImg2"
        app:layout_constraintRight_toRightOf="@+id/mainImg2" />


    <Button
        android:id="@+id/mainBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/mainBtn2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/mainBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/mainBtn3"
        app:layout_constraintEnd_toStartOf="@id/mainBtn1" />

    <Button
        android:id="@+id/mainBtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mainBtn2" />


    <TextView
        android:id="@+id/mainBtn4"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:text="DEMO"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainBtn1" />

    <TextView
        android:id="@+id/mainBtn5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        android:text="DEMO"
        app:layout_constraintBottom_toBottomOf="@id/mainBtn4"
        app:layout_constraintLeft_toRightOf="@id/mainBtn4"
        app:layout_constraintTop_toTopOf="@id/mainBtn4" />

    <TextView
        android:id="@+id/mainBtn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:text="DEMO"
        app:layout_constraintBottom_toBottomOf="@id/mainBtn4"
        app:layout_constraintLeft_toRightOf="@id/mainBtn5"
        app:layout_constraintTop_toTopOf="@id/mainBtn4" />

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mainBtn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="DEMO"
                app:layout_constraintBottom_toBottomOf="@id/mainBtn4"
                app:layout_constraintLeft_toRightOf="@id/mainBtn5"
                app:layout_constraintTop_toTopOf="@id/mainBtn4" />
            <TextView
                android:id="@+id/mainBtn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="DEMO"
                app:layout_constraintBottom_toBottomOf="@id/mainBtn4"
                app:layout_constraintLeft_toRightOf="@id/mainBtn5"
                app:layout_constraintTop_toTopOf="@id/mainBtn4" />
            <TextView
                android:id="@+id/mainBtn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="DEMO"
                app:layout_constraintBottom_toBottomOf="@id/mainBtn4"
                app:layout_constraintLeft_toRightOf="@id/mainBtn5"
                app:layout_constraintTop_toTopOf="@id/mainBtn4" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>