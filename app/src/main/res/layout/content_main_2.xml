<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/mainTxt"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainImg1"
        android:text="Vassilis Pigadas"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/mainBtn"
        android:layout_width="match_parent"
        android:text="Vassilis Pigadas"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/mainImg1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_business_center_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainImg2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mainImg1"
        android:src="@drawable/ic_router_black_24dp" />

    <ImageView
        android:id="@+id/mainImg3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_school_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/mainImg2"
        app:layout_constraintRight_toRightOf="@+id/mainImg2" />
</androidx.constraintlayout.widget.ConstraintLayout>